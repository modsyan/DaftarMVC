@model List<User>

<div class="text-center ">
    <h1 class="display-4 "> Users Management </h1>
    <a href="/dashboard/CreateUser">
        <button>CreateUser</button>
    </a>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-sm table-striped table-hover border-bottom">
            <thead>
            <th>@Html.DisplayNameFor(m => m[0].Id)</th>
            <th>@Html.DisplayNameFor(m => m[0].FirstName)</th>
            <th>@Html.DisplayNameFor(m => m[0].LastName)</th>
            <th>@Html.DisplayNameFor(m => m[0].Email)</th>
            <th>@Html.DisplayNameFor(m => m[0].PhoneNumber)</th>
            <th>@Html.DisplayNameFor(m => m[0].Avatar_link)</th>
            <th>@Html.DisplayNameFor(m => m[0].Level)</th>
            <th>Update</th>
            <th>Remove</th>
            </thead>
            <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(e => item.Id)
                        </td>
                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(e => item.FirstName)
                        </td>
                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(e => item.LastName)
                        </td>

                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(e => item.Email)
                        </td>

                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(e => item.PhoneNumber)
                        </td>

                        
                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(e => item.Avatar_link)
                        </td>
                        
                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(e => item.Level)
                        </td>

                        @* <td class="custom-control custom-checkbox text-center d-none d-md-table-cell"> *@
                        @*     <input type="checkbox" asp-for="@item.ColdStore"> *@
                        @*     <input type="checkbox" class="custom-control-input disabled" asp-for="@item.ColdStore"> *@
                        @*     <label class="custom-control-label disabled"> *@
                        @*         <span class="sr-only">Never</span> *@
                        @*     </label> *@
                        @* </td> *@
                        @* <td class="d-none d-lg-table-cell"> *@
                        @*     @Html.DisplayFor(modelItem => item.Date) *@
                        @* </td> *@
                        <td class="d-none d-lg-table-cell">
                            <a href="/dashboard/updateUser/@item.Id">Update</a>
                        </td>

                        <td class="d-none d-lg-table-cell">
                            <a href="/dashboard/RemoveUser/@item.Id">Remove</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">
                        No Users Found
                    </td>
                </tr>
            }
            </tbody>


        </table>
    </div>
</div>